@model Question

@{
    ViewData["Title"] = "EditQuestion";
    // List<string> Types = new List<string> { "trueOrfalse", "mcq" };
    // SelectList QuestionType = new SelectList(Types);


}







<h1>EditQuestion</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="QuestionId"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionBody" class="control-label"></label>
                <input asp-for="QuestionBody" class="form-control" />
                <span asp-validation-for="QuestionBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionMark" class="control-label"></label>
                <input asp-for="QuestionMark" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="QuestionType" class="control-label"></label>
                <input asp-for="QuestionType" class="form-control" />
            </div>

        
            @{
                int i=1; 
            }
            @foreach (var item in Model.ChoicesList)
            {
              
                <div class="form-group">
                    <label>Choice</label>
                    <input type="text" asp-for="@item.ChoiceBody" class="form-control" name="choicesBody[@i]"  />
                </div>
                
                    i++; 
            }

            <div class="form-group">
                <input type="text" asp-for="@Model.CourseId" />
            </div>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



