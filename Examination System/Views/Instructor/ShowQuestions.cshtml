@model IEnumerable<Question>
@{
    ViewData["Title"] = "ShowQuestions";
}

<h1>ShowQuestions</h1>

@foreach (var item in Model)
{
    <div class="accordion" id="accordionExample-@item.QuestionId">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@item.QuestionId" aria-expanded="false" aria-controls="collapse-@item.QuestionId">
                    <p>Question: @item.QuestionBody</p>
                    <p>Question Type: @item.QuestionType</p>
                    <p>Question Mark: @item.QuestionMark</p>
                </button>
            </h2>
            <div id="collapse-@item.QuestionId" class="accordion-collapse collapse" aria-labelledby="heading-@item.QuestionId" data-bs-parent="#accordionExample-@item.QuestionId">
                <div class="accordion-body">
                    <ul class="list-unstyled">
                        @foreach (var choice in item.ChoicesList)
                        {
                            @if (choice.IsAnswer)
                            {
                                <li class="text-success">@choice.ChoiceBody</li>
                            }
                            else
                            {
                                <li>@choice.ChoiceBody</li>
                            }
                        }
                        <li>
                            <div class="accordion-footer">
                                <a class="btn btn-danger" asp-controller="Instructor" asp-action="DeleteQuestion" asp-route-id="@item.QuestionId" onclick="return confirm('Are you sure you want to delete this question?')">Delete</a>
                                <a class="btn btn-danger" asp-controller="Instructor" asp-action="EditQuestion" asp-route-id="@item.QuestionId">Edit</a>

                            </div>
                        </li>
                    </ul>
                </div>
            </div>
         
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.accordion-button').click(function () {
                $(this).toggleClass('collapsed');
                var collapseId = $(this).attr('data-bs-target');
                $(collapseId).collapse('toggle');
            });
        });
    </script>
}
