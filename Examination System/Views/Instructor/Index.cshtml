@model IEnumerable<Course>
@{
    ViewData["Title"] = "ShowCourses";
}

<h1>ShowCourses</h1>
<a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout @User.Identity.Name</a>


<html>
<head>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Course Name</th>
                <th scope="col">Actions</th>



            </tr>
        </thead>


        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@item.CourseName</td>

                    <td><a class="btn btn-info" asp-controller="Instructor" asp-action="AddNewQuestion" asp-route-id="@item.CourseId">Add Questions</a> 
                    <a class="btn btn-success" asp-controller="Instructor" asp-action="ShowQuestions" asp-route-id="@item.CourseId">Show Questions</a> 
                    <a class="btn btn-success" asp-controller="Instructor" asp-action="AddExam" asp-route-id="@item.CourseId">Add Exam</a> </td>
                </tr>
            }


      
        </tbody>
    </table>

</body>




</html>




