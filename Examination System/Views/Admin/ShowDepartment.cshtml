@model IEnumerable<Department>

@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <title>ShowDepartment</title>
</head>
<body>
    <a asp-action="createDepartment" asp-controller="Admin" class="btn btn-danger">create</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>

                <td>Department Name</td>
                <td>Manager Name</td>
                <td>Operation</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <th>@item.DepartmentName</th>
                    <th>@item.Manager.User.Name</th>
                    <th>
                        <a asp-action="EditDepartment" asp-controller="Admin" asp-route-id="@item.DepartmentId" class="btn btn-info">Edit</a>
                        <a asp-action="DeleteDepartment" asp-controller="Admin" onclick="return confirm('are you sure')" asp-route-id="@item.DepartmentId" class="btn btn-danger">Delete</a>
                    </th>

                </tr>
            }
        </tbody>
    </table>
</body>
</html>
